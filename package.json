{
  "name": "mexc-mcp-server",
  "version": "1.0.0",
  "description": "MEXC cryptocurrency exchange MCP server implementation using Encore.ts",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "encore run",
    "build": "encore build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:mexc": "bun run test-mexc-api.ts",
    "check": "bun run lint && bun run type-check",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "format": "bunx @biomejs/biome format --write .",
    "type-check": "bunx tsc --noEmit",
    "setup": "./setup.sh",
    "prepare": "husky"
  },
  "keywords": [
    "mexc",
    "cryptocurrency",
    "trading",
    "mcp",
    "model-context-protocol",
    "encore",
    "typescript"
  ],
  "author": "Ryan Lisse <ryan@ryanlisse.com>",
  "license": "MIT",
  "dependencies": {
    "encore.dev": "1.48.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.0",
    "@types/bun": "^1.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "bunx @biomejs/biome format --write",
      "bunx @biomejs/biome check --write --unsafe"
    ]
  }
}
